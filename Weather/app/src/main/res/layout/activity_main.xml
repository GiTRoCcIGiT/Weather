<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- TextView for displaying the city name -->
    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:text="City"
        android:textStyle="bold"
        />

    <!-- TextView for displaying the temperature -->
    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="48sp"
        android:textColor="@color/text_color"
        android:text="Temperature"
        android:textStyle="bold"
        />

    <!-- EditText for entering the city name -->
    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTemperature"
        android:layout_margin="16dp"
        android:hint="Enter city name"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_background"
        />

    <!-- Button for initiating the search -->
    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        />
</RelativeLayout>
